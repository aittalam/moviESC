{
  "manifest_version": 2,

  "name": "moviESC",
  "description": "Download movies from IMDB",
  "version": "1.0",

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.imdb.com/*", "https://www.imdb.com/*"],
      "js": ["moviESC.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png"
  }
}
